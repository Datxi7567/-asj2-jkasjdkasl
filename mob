local Players = game:GetService("Players")
local TweenService = game:GetService("TweenService")
local RunService = game:GetService("RunService")

local player = Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local root = character:WaitForChild("HumanoidRootPart")

-- Cấu hình
local radius = 500         -- Bán kính hình tròn
local height = 200         -- Độ cao
local speed = 20           -- Thời gian hoàn thành 1 vòng (giây)
local center = root.Position -- Tâm quay bắt đầu tại vị trí hiện tại

-- Đảm bảo nhân vật không bị va chạm khi bay
for _, part in pairs(character:GetDescendants()) do
    if part:IsA("BasePart") then
        part.CanCollide = false
    end
end

-- Tạo vòng lặp di chuyển theo hình tròn
task.spawn(function()
    local angle = 0
    while true do
        angle = angle + math.rad(5) -- Tăng góc mỗi bước
        local x = center.X + math.cos(angle) * radius
        local z = center.Z + math.sin(angle) * radius
        local targetPosition = Vector3.new(x, height, z)

        local tween = TweenService:Create(
            root,
            TweenInfo.new(0.05, Enum.EasingStyle.Linear),
            {CFrame = CFrame.new(targetPosition)}
        )
        tween:Play()
        tween.Completed:Wait()
    end
end)
